<% include ../partials/_header %>


<div class="container">
    <div class="row">
        <% for(var i=0; i < tareas.length; i++) {%>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">                 
                    <h1><%= tareas[i].titulo %></h1>
                    <p><%= tareas[i].descripcion %></p>    
                </div>
                <div class="card-footer d-flex justify-content-between aling-items-center">
                    <a href="/task/borrar/<%= tareas[i]._id %>" class="btn btn-danger">Borrar</a>
                    <a href="/task/editar/<%= tareas[i]._id %>" class="btn btn-success">Editar</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>